{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,

    "allowJs": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,

    "experimentalDecorators": true,
    "useDefineForClassFields": true,

    "skipLibCheck": true,
    "esModuleInterop": true,

    "baseUrl": ".",
    "lib": ["esnext", "dom"]
  },
  "include": ["pbhhg_js/src/**/*.ts", "pbhhg_js/types/**/*.ts"],
  "exclude": ["node_modules"]
}
